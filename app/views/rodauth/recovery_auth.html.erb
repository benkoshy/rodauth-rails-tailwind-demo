<div class="dark:bg-gray-900 min-h-full flex items-center justify-center py-4 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-sm">
    <h2 class="mb-3 text-3xl font-semibold text-center dark:text-gray-200">
      <%= rodauth.recovery_auth_page_title %>
    </h2>
    <div class="p-4 rounded-md shadow shadow-inner sm:p-8 dark:bg-gray-900 dark:text-gray-100">
      <%= form_with url: rodauth.recovery_auth_path, method: :post, data: { turbo: false } do |form| %>
        <div class="mb-3">
          <%= form.label "recovery-code", rodauth.recovery_codes_label, class: "block text-sm text-gray-400" %>
          <%= form.text_field rodauth.recovery_codes_param, value: "", id: "recovery-code", autocomplete: "off", required: true, class: class_names("w-full px-3 py-2 border rounded-md border-gray-400 dark:border-gray-700 dark:bg-gray-900 dark:text-gray-100 focus:dark:bg-gray-800 focus:dark:border-emerald-400 invalid:border-red-500 invalid:text-red-600 focus:invalid:border-red-500 focus:invalid:ring-red-500 valid:border-green-500", {"focus:border-red-400 focus:outline-none": rodauth.field_error(rodauth.recovery_codes_param)}), aria: ({ invalid: true, describedby: "recovery-code_error_message" } if rodauth.field_error(rodauth.recovery_codes_param)) %>
          <%= content_tag(:span, rodauth.field_error(rodauth.recovery_codes_param), class: "text-red-800 text-xs mt-1 ml-1", id: "recovery-code_error_message") if rodauth.field_error(rodauth.recovery_codes_param) %>
        </div>
        <div class="mb-3">
          <%= form.submit rodauth.recovery_auth_button, class: "w-full px-8 py-3 font-semibold rounded-md w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:bg-emerald-400 dark:text-gray-900" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
