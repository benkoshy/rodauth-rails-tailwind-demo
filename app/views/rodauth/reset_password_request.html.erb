<div class="dark:bg-gray-900 min-h-full flex items-center justify-center py-4 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-sm">
    <%= form_with url: rodauth.reset_password_request_path, method: :post, data: { turbo: false } do |form| %>
      <h2 class="text-center mb-3 font-medium leading-tight text-3xl mt-0 mb-2 text-gray-900 dark:text-white">
        <%= rodauth.reset_password_request_page_title  %>
      </h2>
      <div class="text-center text-sm text-gray-700 mb-8 dark:text-white">
        <%== rodauth.reset_password_explanatory_text %>
      </div>
      <% if params[rodauth.login_param] && !rodauth.field_error(rodauth.login_param) %>
        <%= form.hidden_field rodauth.login_param, value: params[rodauth.login_param] %>
      <% else %>
        <div class="py-4">
          <%= form.label "login", rodauth.login_label, class: "block text-sm text-gray-600" %>
          <%= form.email_field rodauth.login_param, value: params[rodauth.login_param], id: "login", autocomplete: "email", required: true, class: class_names("text-gray-900 ring-gray-900 ring-opacity-5 placeholder-gray-400 appearance-none bg-white rounded-md block w-full px-3 py-2 border border-transparent shadow ring-1 sm:text-sm dark:border-gray-700 dark:bg-gray-900 dark:text-gray-100 focus:dark:border-emerald-400 focus:dark:bg-gray-800 focus:border-blue-500 focus:ring-blue-500 focus:outline-none invalid:border-red-500 invalid:text-red-600 focus:invalid:border-red-500 focus:invalid:ring-red-500 valid:border-green-500", {"border rounded-md border-red-500 valid:border-green-500": rodauth.field_error(rodauth.login_param)}), aria: ({ invalid: true, describedby: "login_error_message" } if rodauth.field_error(rodauth.login_param)), placeholder: "Email" %>
          <%= content_tag(:span, rodauth.field_error(rodauth.login_param), class: "text-red-800 text-xs mt-1 ml-1", id: "login_error_message") if rodauth.field_error(rodauth.login_param) %>
        </div>
      <% end %>
      <div>
        <%= form.submit rodauth.reset_password_request_button, class: "w-full px-8 py-3 font-semibold rounded-md py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:bg-emerald-400 dark:text-gray-900" %>
      </div>
    <% end %>
  </div>
</div>
