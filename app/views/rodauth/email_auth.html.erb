<% content_for :title, rodauth.email_auth_page_title %>
<div class="dark:bg-gray-900 flex items-center justify-center h-screen">
  <div class="mx-4 py-4">
    <h3 class="mb-3 text-3xl font-semibold text-center text-white"> Email Auth </h3>    
    <%= form_with url: rodauth.email_auth_path, method: :post, data: { turbo: false } do |form| %>      
      <div class="py-2">
        <%= form.submit rodauth.login_button, class: "w-full px-8 py-3 font-semibold rounded-md 
          w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:bg-emerald-400 dark:text-gray-900" %>
      </div>
    <% end %>
  </div>
</div>