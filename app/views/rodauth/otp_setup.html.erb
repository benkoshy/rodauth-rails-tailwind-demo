<% content_for :title, rodauth.otp_setup_page_title %>
<%= form_with url: rodauth.otp_setup_path, method: :post, data: { turbo: false } do |form| %>
<%= form.hidden_field rodauth.otp_setup_param, value: rodauth.otp_user_key, id: "otp-key" %>
<%= form.hidden_field rodauth.otp_setup_raw_param, value: rodauth.otp_key, id: "otp-hmac-secret" if rodauth.otp_keys_use_hmac? %>
<div class="flex items-center min-h-screen dark:bg-gray-900 bg-gray-50 bg-white rounded-lg shadow-xl">
	<div class="flex-1 h-full max-w-4xl mx-auto">
		<div class="flex flex-col md:flex-row">
			<div class="flex md:hidden">
				<%== rodauth.otp_qr_code %>				
			</div>
			<div class="h-32 md:h-auto md:w-1/2 hidden md:flex">
				<div class="object-cover w-full h-full">
					<%== rodauth.otp_qr_code %>					
				</div>
			</div>
			<div class="flex items-center justify-center p-6 sm:p-12 md:w-1/2">
				<div class="w-full">
					<div>
						<p class="dark:text-gray-100 ">
							<b><%= rodauth.otp_secret_label %>: </b>
						<%= rodauth.otp_user_key %></p>
						<div class="mt-2">
							<p class="dark:text-gray-100 ">
								<b><%= rodauth.otp_provisioning_uri_label %>: </b>
							</p>
							<%= link_to(rodauth.otp_provisioning_uri.truncate(40), rodauth.otp_provisioning_uri , class: "underline text-blue-600 hover:text-blue-800 visited:text-purple-600") %>
						</div>
					</div>
					<% if rodauth.two_factor_modifications_require_password? %>
					<div class="space-y-2 mt-4">
						<%= form.label "password", rodauth.password_label, class: "block text-sm text-gray-400 dark:text-gray-100" %>
						<%= form.password_field rodauth.password_param, value: "", id: "password", autocomplete: rodauth.password_field_autocomplete_value, required: true, class: class_names("w-full px-3 py-2 border rounded-md border-gray-400 dark:border-gray-700 dark:bg-gray-900 dark:text-gray-100 focus:dark:bg-gray-800 focus:dark:border-emerald-400 invalid:border-red-500 invalid:text-red-600 focus:invalid:border-red-500 focus:invalid:ring-red-500 valid:border-green-500", {"focus:border-red-400 focus:outline-none": rodauth.field_error(rodauth.password_param)}), aria: ({ invalid: true, describedby: "password_error_message" } if rodauth.field_error(rodauth.password_param)) %>
						<%= content_tag(:span, rodauth.field_error(rodauth.password_param), class: "text-red-800 text-xs mt-1 ml-1", id: "password_error_message") if rodauth.field_error(rodauth.password_param) %>
					</div>
					<% end %>
					<div class="space-y-2 mt-4">
						<%= form.label "otp-auth-code", rodauth.otp_auth_label, class: "block text-sm text-gray-400 dark:text-gray-100" %>
						<div class="col-sm-3">
							<%= form.text_field rodauth.otp_auth_param, value: "", id: "otp-auth-code", autocomplete: "off", inputmode: "numeric", required: true, class: class_names("w-full px-3 py-2 border rounded-md border-gray-400 dark:border-gray-700 dark:bg-gray-900 dark:text-gray-100 focus:dark:bg-gray-800 focus:dark:border-emerald-400 invalid:border-red-500 invalid:text-red-600 focus:invalid:border-red-500 focus:invalid:ring-red-500 valid:border-green-500", {"border rounded-md border-red-500": rodauth.field_error(rodauth.otp_auth_param)}), aria: ({ invalid: true, describedby: "otp-auth-code_error_message" } if rodauth.field_error(rodauth.otp_auth_param)) %>
							<%= content_tag(:span, rodauth.field_error(rodauth.otp_auth_param), class: "text-red-800 text-xs mt-1 ml-1", id: "otp-auth-code_error_message") if rodauth.field_error(rodauth.otp_auth_param) %>
						</div>
					</div>
					<div class="mt-2">
						<%= form.submit rodauth.otp_setup_button, class: "w-full px-8 py-3 font-semibold rounded-md w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:bg-emerald-400 dark:text-gray-900" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>