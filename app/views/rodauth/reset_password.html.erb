<div class="dark:bg-gray-900 min-h-full flex items-center justify-center py-4 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-sm">
    <h2 class="text-center mb-3 font-medium leading-tight text-3xl mt-0 mb-2 dark:text-white">
      <%= rodauth.reset_password_page_title  %>
    </h2>
    <%= form_with url: rodauth.reset_password_path, method: :post, data: { turbo: false } do |form| %>
      <div class="py-2">
        <%= form.label "password", rodauth.password_label, class: "block text-sm text-gray-400 dark:text-gray-200" %>
        <%= form.password_field rodauth.password_param, value: "", id: "password", autocomplete: rodauth.password_field_autocomplete_value, required: true, class: class_names("w-full px-3 py-2 border rounded-md border-gray-400 dark:border-gray-700 dark:bg-gray-900 dark:text-gray-100 focus:dark:bg-gray-800 focus:dark:border-emerald-400 invalid:border-red-500 invalid:text-red-600 focus:invalid:border-red-500 focus:invalid:ring-red-500 valid:border-green-500", {"border rounded-md border-red-500 dark:border-red-500": rodauth.field_error(rodauth.password_param)}), aria: ({ invalid: true, describedby: "password_error_message" } if rodauth.field_error(rodauth.password_param)) %>
        <%= content_tag(:span, rodauth.field_error(rodauth.password_param).capitalize, class: "text-red-900 text-xs mt-1 ml-1", id: "password_error_message") if rodauth.field_error(rodauth.password_param) %>
      </div>
      <% if rodauth.require_password_confirmation? %>
        <div class="py-2">
          <%= form.label "password-confirm", rodauth.password_confirm_label, class: "block text-sm text-gray-400 dark:text-gray-200" %>
          <%= form.password_field rodauth.password_confirm_param, value: "", id: "password-confirm", autocomplete: "new-password", required: true, class: class_names("w-full px-3 py-2 border rounded-md border-gray-400 dark:border-gray-700 dark:bg-gray-900 dark:text-gray-100 focus:dark:bg-gray-800 focus:dark:border-emerald-400 invalid:border-red-500 invalid:text-red-600 focus:invalid:border-red-500 focus:invalid:ring-red-500 valid:border-green-500", {"border rounded-md border-red-500 dark:border-red-500": rodauth.field_error(rodauth.password_confirm_param)}), aria: ({ invalid: true, describedby: "password-confirm_error_message" } if rodauth.field_error(rodauth.password_confirm_param)) %>
          <%= content_tag(:span, rodauth.field_error(rodauth.password_confirm_param), class: "text-red-800 text-xs mt-1 ml-1", id: "password-confirm_error_message") if rodauth.field_error(rodauth.password_confirm_param) %>
        </div>
      <% end %>
      <div class="py-2">
        <%= form.submit rodauth.reset_password_button, class: "w-full px-8 py-3 font-semibold rounded-md py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:bg-emerald-400 dark:text-gray-900" %>
      </div>
    <% end %>
  </div>
</div>
